<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size_medium"
    tools:context=".MainActivity"
    android:focusable="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_label_pokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokemon Number" />

        <EditText
            android:id="@+id/et_id_pokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_label_pokemon"
            android:layout_toLeftOf="@id/btn"
            android:layout_alignParentLeft="true"
            android:drawablePadding="@dimen/size_low"
            android:hint="Type ID Number"
            android:inputType="number" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/et_id_pokemon"
            android:layout_alignParentRight="true"
            android:background="@color/red_button"
            android:textColor="@color/text_color_white_button"
            android:text="Search" />



    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_pokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>