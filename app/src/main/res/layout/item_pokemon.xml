<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_rowSpan="3"
            android:layout_marginRight="@dimen/size_low"
            android:drawableBottom="@drawable/pokestart" />
        <TextView
            android:id="@+id/tv_dato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_black"
            android:textStyle="bold"
            android:textSize="@dimen/size_medium"
            app:layout_row="1"
            android:text="Nombre: "/>

        <TextView
            android:id="@+id/tv_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_row="2"
            android:textColor="@color/text_color_black"
            app:layout_column="1"
            android:text="URL: "/>
    </android.support.v7.widget.GridLayout>
    <Button
        android:id="@+id/btn_ver_pokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_low"
        android:background="@color/color_mostaza_button"
        android:textColor="@color/text_color_white_button"
        android:text="Ver"/>

</LinearLayout>